@model LAB5.Models.Account

@{
    ViewData["Title"] = "Account Details";
}

<h2>Account Details</h2>

<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Account Number</dt>
        <dd class="col-sm-10">@Model.AccountNumber</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.AccountStatusCode</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.AccountTypeCode</dd>

        <dt class="col-sm-2">Current Balance</dt>
        <dd class="col-sm-10">@Model.CurrentBalance</dd>

        <dt class="col-sm-2">Details</dt>
        <dd class="col-sm-10">@Model.OtherDetails</dd>
    </dl>
</div>

